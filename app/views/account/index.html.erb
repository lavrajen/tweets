<h1>Account </h1>

<%= button_to "Edit Password", edit_password_path, method: :get, class: "btn btn-outline-primary" %>



<%= form_with model: Current.user, url: update_profile_picture_path, multipart: true, method: :patch do |form| %>
  <div class="field">
    <%= form.label :profile_picture %>
    <%= form.file_field :profile_picture %>
    <%= form.submit %>
  </div>
<%end %>

<% if Current.user.profile_picture.attached? %>
  <%= image_tag Current.user.profile_picture.variant(resize_to_fill: [100, 100]), width: 100, height: 100, alt: "Profile Picture", class: "rounded-circle" %>
 
<% else %>
  <p>No image attached</p>
<% end %>

