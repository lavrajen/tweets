<h1>Sign In</h1>

<%# the url attribute specifies where the form will be submitted %>
<%= form_with url: sign_in_path do |form| %>

<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "example@gmail.com" %>
</div>
<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    <%= link_to "Forgot your password?", password_reset_path %>
</div>

<div class="mb-3">
    <%# Has a default string of Create User due to the table name %>
    <%= form.submit "Sign In"%>
</div>

<% end %>
