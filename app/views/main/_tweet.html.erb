<%
=begin%>
 <div class="mb-3 card card-body">
    <% if tweet.user.profile_picture.present? %>
    <div class="mr-3">
        <%= image_tag tweet.user.profile_picture.variant(resize_to_fill: [200, 200]), width: 100, height: 100, alt: "Profile Picture" , class: "rounded-circle"%>
    <%end%>
    </div>
    <div>
    <%= tweet.body %>
    <%# The l is a helper method for 'localisation', it helps for formatting %>
    Posted at: <%= l tweet.updated_at, format: :short %>
</div>
</div> 
<%
=end%>

<div class="mb-3 card card-body">
  <% if tweet.user.profile_picture.present? %>
    <div class="mr-3">
      <%= image_tag tweet.user.profile_picture.variant(resize_to_fill: [50, 50]), width: 50, height: 50, alt: "Profile Picture", class: "rounded-circle" %>
    </div>
  <% end %>
  <div>
    <%= tweet.body %>
    <small class="text-muted">Posted at: <%= l tweet.updated_at, format: :short %></small>
  </div>
</div>
